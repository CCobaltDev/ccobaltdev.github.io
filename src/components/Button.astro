---
import Window from "./Window.astro";

interface Props {
	link: string;
}
const { link } = Astro.props;
---

<a href={link}>
	<Window
		class="min-w-25 min-h-12 flex justify-center items-center mx-0! p-0! transform transition duration-300 ease-in-out hover:scale-105"
	>
		<slot />
	</Window>
</a>
