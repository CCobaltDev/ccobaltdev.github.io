---
import Header from "../components/Header.astro";
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="initial">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="CCobaltDev's Website" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>CCobaltDev | {title}</title>
	</head>
	<body>
		<Header />
		<div
			class="min-h-screen min-w-full bg-linear-to-br from-indigo-600 to-blue-700"
		>
			<main>
				<div
					class="flex flex-row min-h-screen justify-center items-center"
				>
					<slot />
				</div>
			</main>
		</div>
	</body>
</html>
