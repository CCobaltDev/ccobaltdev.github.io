---
import CommonPage from "../layouts/CommonPage.astro";
import Window from "../components/Window.astro";
import SocialMediaButton from "../components/SocialMediaButton.astro";
import Cobalt from "../assets/cobalt.png";
import BSkyLogo from "../assets/bluesky_media_kit_logo.svg";
import GithubLogo from "../assets/GitHub_Invertocat_Light.svg";
import { Image } from "astro:assets";
---

<CommonPage title="Home">
	<div class="flex flex-col min-h-screen justify-center items-center">
		<Window class="flex flex-row">
			<div class="w-7/10">
				<h1 class="text-4xl">Hi there!</h1>
				<br />
				<p>
					I'm CCobaltDev. I'm a transfem lesbian who enjoys playing
					games and programming. I primarily code in Haxe, C#, C++,
					and Python. You can find a list of my projects on Github.
				</p>
				<br />
				<p>
					This site is VERY much a work-in-progress, so it will change
					in the future.
				</p>
			</div>
			<div class="w-3/10 flex flex-col items-center mr-8">
				<p class="text-center text-sm mb-3">
					Art by
					<a
						class="text-white font-extrabold"
						href="https://bsky.app/profile/cherrychii.bsky.social"
					>
						Chi
					</a>
				</p>
				<Image src={Cobalt} alt="CCobaltDev's Persona" />
			</div>
		</Window>
		<div class="flex flex-row justify-evenly items-center">
			<SocialMediaButton
				src={GithubLogo}
				alt="Github Logo"
				link="https://github.com/CCobaltDev/"
			/>
			<SocialMediaButton
				src={BSkyLogo}
				alt="Bluesky Logo"
				link="https://bsky.app/profile/ccobaltdev.bsky.social"
			/>
		</div>
	</div>
</CommonPage>
